<html lang="en">
<head>
    <% include ../helpers/head %>
</head>

<body>
  <!-- the classes 'page-header' and 'btn btn-dark' create bootstrap components.  -->
  <!-- Check out more components here: http://getbootstrap.com/components/ -->
  <div class="page-header">
    <% include ../helpers/navbar %>
  
    <h1>Get Weather by ZIP Code</h1>
  </div>

  <input type="text" class="search" placeholder="Enter ZIP Code">
  <button type="button" class="btn-md search-button" onclick="searchWeather()">Search</button>


  <div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="weather">
                <div class="current">
                    <div class="info">
                      <div>&nbsp;</div>
                      <div class="city-label"><span class="city"></span></div>
                      <div class="temp-label"><span class="temp"></span>&#176; <small>F</small></div>
                      <div class="wind-label"><span class="wind"></span></div>
                      <div class="condition-label"><span class="condition"></span></div>
                      <div>&nbsp;</div>
                    </div>
                  </div>
              </div>
          </div>
      </div>
  </div>

      
  
</body>

</html>